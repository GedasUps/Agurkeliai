<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewFragment2">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="Review"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reviewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Jonas Jonaitis"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reviewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:text="May 10, 2024, 08:55 PM"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reviewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:text="Kaunas, Lithuania"
            android:textSize="16sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E1E1E1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reviewText"
                    android:layout_width="wrap_content"
                    android:layout_height="284dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="25dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam felis nisi, egestas ac lectus vitae, feugiat fermentum urna. In vestibulum vulputate purus, sed laoreet nulla hendrerit eget. Ut nec odio id libero mollis mattis eu et metus. Ut feugiat nisi eu lorem auctor, at porttitor magna mattis. Mauris pretium laoreet neque. Aenean sed ipsum rhoncus, posuere diam eget, imperdiet augue. Duis ullamcorper eget est non porta. Pellentesque volutpat dapibus felis ut congue. Duis eu felis vitae magna dictum tempus vel ullamcorper mauris. Nullam purus sapien, eleifend eget nibh ut, varius semper mi. In purus quam, imperdiet vitae turpis quis, semper vehicula risus. Nunc luctus porttitor est at fermentum. Cras at nibh nec quam congue facilisis ut ac lectus. Duis commodo a arcu at tempus."
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/reviewViewsLikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:text="1393 views, 31 likes, 4 replies"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/likeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:text="Like" />

            <Button
                android:id="@+id/replyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:text="Reply" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>